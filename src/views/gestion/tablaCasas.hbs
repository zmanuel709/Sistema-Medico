<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Tabla de Casas</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>direccion</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each casas}}
                                <tr>
                                    <td>{{codigo}}</td>
                                    <td>{{direccion}}</td>
                                    <td>
                                        <a href="/casa/{{codigo}}" class="btn btn-primary">Ver más</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div><!-- .contenido -->

