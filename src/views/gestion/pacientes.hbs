        <div class="text-center">
          <h3 class="">Lista de Todos los Pacientes</h3>
        </div>



        <!-- {{! ventana modal para editar }} -->


        <div class="modal fade text-dark" id="modal" tabindex="-1" role="dialog"
          aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title font-weight-bold">
                  Editar Paciente
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="alert alert-danger d-none" role="alert" id="modal-alert">
                  A simple danger alert—check it out!
                </div>
                <form>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="inputEmail4">Nombres</label>
                      <input type="text" class="form-control" id="inputEmail4" placeholder="ingresa nombre completo">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="inputPassword4">Apellidos</label>
                      <input type="text" class="form-control" id="inputPassword4"
                        placeholder="ingresa Apellido completo">
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="inputEmail4">Numero de Cedula</label>
                      <input type="text" class="form-control" id="inputEmail4" placeholder="ingresa tu Nro de cedula">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="inputPassword4">Numero de Telefono</label>
                      <input type="text" class="form-control" id="inputPassword4" placeholder="ingresa Nro de Telefono">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputAddress">Direccion</label>
                    <textarea name="" class="form-control" rows="3"
                      placeholder="sector, avenida, callle, ciudad"></textarea>
                  </div>

                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                  cerrar
                </button>
                <button type="button" class="btn btn-info bg-danger border-danger" id="modal-btn">
                  guardar
                </button>
              </div>
            </div>
          </div>
        </div>


        <main>
          <div class="container pt-3">
            <div class="alert alert-danger d-none" role="alert" id="alert">
              A simple danger alert—check it out!
            </div>

            <!-- añadir especialidad -->

            <div>
              <form action="/notes/new-note" method="post">
                <div class="row">
                  <div class="col-sm-3 d-sm-flex align-items-center mb-3">
                    <label class="m-sm-0">Cedula</label>
                    <input type="text" name="title" id="title" class="form-control ml-sm-2"
                      placeholder="ingresa tu Cedula">
                  </div>
                  <div class="col-sm-4 d-sm-flex align-items-center mb-3">
                    <label class="m-sm-0">Nombres</label>
                    <input type="text" name="title" id="title" class="form-control ml-sm-2"
                      placeholder="Nombre completo">
                  </div>
                  <div class="col-sm-5 d-sm-flex align-items-center mb-3">
                    <label class="m-sm-0">Apellidos</label>
                    <input type="text" name="title" id="title" class="form-control ml-sm-2"
                      placeholder="Apellidos completo">
                  </div>
                  <div class="px-sm-3 col-sm-7 d-sm-flex align-items-center mt-2 mt-sm-0">
                    <label class="m-sm-0">Direccion</label>
                    <input type="text" name="description" id="description" class="form-control ml-sm-2"
                      placeholder="ingresa tu direccion de residencia">
                  </div>
                  <div class="col-sm-3 d-sm-flex align-items-center">
                    <label class="m-sm-0">Telefono</label>
                    <input type="text" name="title" id="title" class="form-control ml-sm-2"
                      placeholder="Nro de Telefono">
                  </div>

                  <div class="col-sm-2 d-sm-flex justify-content-end mt-4 mt-sm-0">
                    <button type="button" class="btn btn-info btn-block bg-danger border-danger" id="add">
                      añadir
                    </button>
                  </div>
                </div>
              </form>
            </div>

