<div class="container">

  <!-- titulo y filtros de busqueda  -->
  <div class="pt-5" id="especialidades">
    <div class="card text-dark">
      <div class="card-body">
        <div class="text-center">
          <h3 class="">Lista de Todos los Pacientes</h3>
        </div>


        <main>
          <div class="container pt-3">
            <div class="alert alert-danger d-none" role="alert" id="alert">
              A simple danger alert—check it out!
            </div>

            <!-- añadir especialidad -->

            <div>
              <form action="/addPaciente" method="post">
                <div class="row">
                  <div class="col-sm-3 d-sm-flex align-items-center mb-3">
                    <label class="m-sm-0">Cedula</label>
                    <input type="text" name="cedula" id="title" class="form-control ml-sm-2"
                      placeholder="ingresa tu Cedula">
                  </div>
                  <div class="col-sm-4 d-sm-flex align-items-center mb-3">
                    <label class="m-sm-0">Nombres</label>
                    <input type="text" name="nombres" id="title" class="form-control ml-sm-2"
                      placeholder="Nombre completo">
                  </div>
                  <div class="col-sm-5 d-sm-flex align-items-center mb-3">
                    <label class="m-sm-0">Apellidos</label>
                    <input type="text" name="apellidos" id="title" class="form-control ml-sm-2"
                      placeholder="Apellidos completo">
                  </div>
                  <div class="px-sm-3 col-sm-6 d-sm-flex align-items-center mt-2 mt-sm-0">
                    <label class="m-sm-0">Direccion</label>
                    <input type="text" name="direccion" id="description" class="form-control ml-sm-2"
                      placeholder="ingresa tu direccion de residencia">
                  </div>
                  <div class="col-sm-4 d-sm-flex align-items-center">
                    <label class="m-sm-0">Telefono</label>
                    <input type="text" name="telefono" id="title" class="form-control ml-sm-2"
                      placeholder="Nro de Telefono">
                  </div>

                  <div class="col-sm-2 d-sm-flex justify-content-end mt-4 mt-sm-0">
                    <button type="submit" class="btn btn-info btn-block bg-danger border-danger">
                      añadir
                    </button>
                  </div>
                </div>
              </form>
            </div>

            <!-- Table -->

            <div class="mt-5">
              <table class="table table-hover table-striped" id="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Cedula</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">
                      <div class="d-flex justify-content-center">
                        Historial Medico
                      </div>
                    </th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>

                  <!-- El contenido de la tabla sera generado por el codigo JavaSvrip aqui-->
                  {{#each paciente}}
                  <tr>
                    <th scope="row">{{@index}}</th>

                    <td>{{cedula}}</td>
                    <td>{{nombres}}</td>
                    <td>{{apellidos}}</td>
                    <td>{{direccion}}</td>
                    <td>{{telefono}}</td>

                    <!-- ver historial -->
                    <td class="text-center">
                      <a class="btn btn-success" href="/historial/{{_id}}">Historial</a>
                    </td>

                    <!-- editar y eliminar  -->

                    <td class="text-right">
                      <form class="d-inline" action="/addPaciente/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">

                        <button type="button" class="btn btn-primary mb-1" data-toggle="modal"
                          data-target="#m{{@index}}">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-pencil" viewBox="0 0 16 16">
                            <path
                              d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                          </svg>
                        </button>

                        <button class="btn btn-danger mb-1 ml-1">
                          <i class="fa fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>

                  {{!-- ventana modal --}}

                  <div class="modal fade" id="m{{@index}}" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title font-weight-bold">
                            Editar Paciente
                          </h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <div class="alert alert-danger d-none" role="alert" id="modal-alert">
                            A simple danger alert—check it out!
                          </div>
                          <form action="/addPaciente/edit/{{_id}}?_method=PUT" method="POST">
                            <input type="hidden" name="_method" value="PUT">

                            <div class="form-row">
                              <div class="form-group col-md-6">
                                <label for="inputEmail4">Nombres</label>
                                <input type="text" class="form-control" name="nombres"
                                  placeholder="ingresa nombre completo" value="{{nombres}}">
                              </div>
                              <div class="form-group col-md-6">
                                <label for="inputPassword4">Apellidos</label>
                                <input type="text" class="form-control" name="apellidos"
                                  placeholder="ingresa Apellido completo" value="{{apellidos}}">
                              </div>
                            </div>

                            <div class="form-row">
                              <div class="form-group col-md-6">
                                <label for="inputEmail4">Numero de Cedula</label>
                                <input type="text" class="form-control" name="cedula"
                                  placeholder="ingresa tu Nro de cedula" value="{{cedula}}">
                              </div>
                              <div class="form-group col-md-6">
                                <label for="inputPassword4">Numero de Telefono</label>
                                <input type="text" class="form-control" name="telefono"
                                  placeholder="ingresa Nro de Telefono" value="{{telefono}}">
                              </div>
                            </div>

                            <div class="form-group">
                              <label for="inputAddress">Direccion</label>
                              <textarea name="direccion" class="form-control" rows="3"
                                placeholder="sector, avenida, callle, ciudad">{{direccion}}</textarea>
                            </div>

                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                cerrar
                              </button>
                              <button class="btn btn-info">
                                guardar
                              </button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>

            {{/each}}



            </body>
            </table>
          </div>
      </div>

    </div>
  </div>

</div>