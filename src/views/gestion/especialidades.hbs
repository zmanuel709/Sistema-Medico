<div id="especialidades">
    <div class="card">
        <div class="card-body">
            <h3>
                lista de especialidades
            </h3>
            <form class="form-inline my-2 my-lg-0" id="filters">
                <label class="font-weight-bold text-info mr-3">Filtros</label>
                <input type="radio" name="type" value="all" class="mx-1">
                <label for="male" class="mb-0">Todas</label>
                <input type="radio" name="type" value="completed" class="mx-1">
                <label for="female" class="mb-0">activas</label>
                <input type="radio" name="type" value="uncompleted" class="mx-1">
                <label for="other" class="mr-2 mb-0">inactivas</label>

                <input class="form-control mr-sm-2" type="search" name="words" placeholder="oftalmología"
                    aria-label="Search">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit" id="search">
                    Buscar
                </button>
            </form>







            <main>
                <div class="container pt-3">
                    <div class="alert alert-danger d-none" role="alert" id="alert">
                        A simple danger alert—check it out!
                    </div>

                    <!-- Add Todo -->

                    <div>
                        <form action="/addEsp" method="post">
                            <div class="row">
                                <div class="col-sm-3 d-sm-flex align-items-center">
                                    <label class="m-sm-0">Especialidad</label>
                                    <input type="text" name="title" id="title" class="form-control ml-sm-2" placeholder="oftalmología">
                                </div>
                                <div class="px-sm-2 col-sm-7 d-sm-flex align-items-center mt-2 mt-sm-0">
                                    <label class="m-sm-0">Descripcion</label>
                                    <input type="text" name="description" id="description" class="form-control ml-sm-2"
                                        placeholder="consultorio numero 2">
                                </div>
                                <div class="col-sm-2 d-sm-flex justify-content-end mt-4 mt-sm-0">
                                    <button class="btn btn-info btn-block">
                                        añadir
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Table -->

                    <div class="mt-5">
                        <table class="table table-striped" id="table">
                            <thead>
                                <tr>
                                    <th scope="col">Especialidades</th>
                                    <th scope="col">Descripcion</th>
                                    <th scope="col">
                                        <div class="d-flex justify-content-center">
                                            Estado
                                        </div>
                                    </th>
                                    <th scope="col" class="text-right">Editar</th>
                                    <th scope="col" class="text-right">Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>

                                <!-- content generated with handlebars -->

                                <tr>

                                </tr>
                                {{#each especialidad}}
                                <tr id="{{@index}}">
                                    <td>{{title}}</td>

                                    <td>{{description}}</td>

                                    <td class="text-center">
                                       {{#if completed}}
                                            <a
                                                class="btn btn-success"
                                                href="/addEsp/{{_id}}/toggleDone"
                                            >Activa</a>
                                            {{else}}
                                            <a class="btn btn-dark" href="/addEsp/{{_id}}/toggleDone">
                                                Inactiva
                                            </a>
                                            {{/if}}
                                    </td>

                                           <td class="text-right">
                                        <button class="btn btn-primary mb-1" data-toggle="modal"
                                            data-target="#m{{@index}}">
                                            <i class="fas fa-edit"></i>
                                        </button>


                                    </td>
                                    <td class="text-right">
                                        <form action="/addEsp/delete/{{_id}}?_method=DELETE" method="POST">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button class="btn btn-danger mb-1 ml-1">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>


                                </tr>


                                {{!-- modal edit --}}
                                <div class="modal fade" id="m{{@index}}" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">
                                                    Editar Especialidad
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="alert alert-danger d-none" role="alert" id="modal-alert">
                                                    A simple danger alert—check it out!
                                                </div>

                                                <form action="/addEsp/edit/{{_id}}?_method=PUT" method="POST">
                                                    <input type="hidden" name="_method" value="PUT">
                                                    <div class="form-group">
                                                        <label>Especialidad</label>
                                                        <input name="title" type="text" class="form-control"
                                                            placeholder="Do Something" value="{{title}}">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Descripcion</label>
                                                        <textarea class="form-control" rows="3"
                                                            name="description">{{description}}</textarea>
                                                    </div>
                                                    

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">
                                                            cerrar
                                                        </button>
                                                        <button class="btn btn-info">
                                                            guardar
                                                        </button>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </main>

        </div>
    </div>


    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous"></script>